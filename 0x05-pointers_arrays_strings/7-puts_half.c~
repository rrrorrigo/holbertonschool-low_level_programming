#include "holberton.h"
#include <stdio.h>

/**
 * puts_half - print string.
 * @str: external value
 *
 */

void puts_half(char *str)
{
	int mitad;
	int length;

	if ((*str % 2) == 0)
	{
		for (length = 0; str[length] != 0; length++)
		{
		}
		mitad = length / 2;
		for (int i = mitad; i < length; i++)
		{
			_putchar(str[i]);
		}
	}
}
