#include "holberton.h"
/**
 * is_prime_number - return if the input integer is a prime number
 *
 * @n: source int
 * Return: 1 if is a primer number, otherwise return 0
 */
int is_prime_number(int n)
{
	int i = 2;

	if (i == 1)
	{
		return (1);
	}
	else
	{
		if (n % i == 0)
			return (0);
		else
			return (is_prime_number(n - 1));
	}
}
