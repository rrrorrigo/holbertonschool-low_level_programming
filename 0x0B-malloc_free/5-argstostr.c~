#include "holberton.h"
#include <stdio.h>
#include <stdlib.h>
/**
 * create_array - prints buffer in hexa
 * @size: te size of the memory to copy
 * @c: the char to copy
 *
 * Return: char.
 */
char *argstostr(int ac, char **av)
{
	char *arg;
	int i;

	arg = malloc(sizeof(char) * ac);
	for (i = 0; i < ac; i++)
	{
		arg[i] = *av[i];
		arg[i] = '\n';
	}
	return (arg);
}
